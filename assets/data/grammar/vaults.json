{
Main: {
	X: 50,
	Y: 50,
	Z: 200,
	Rule: CreateBuilding
},
CreateBuilding: {
	Define: {
		VaultSize: "(X/3)*2",
		PillarSize: X/7
	},
	Select: {
		Sides: [
			Left,
			Back,
			Bottom
		],
		Coords: [
			xyz,
			xyz,
			xyz
		],
		Rules: [
			Wall,
			Wall,
			Floor
		],
		Sizes: [ 1, 1, 1, 1 ]
	},
	Divide: {
		Axis: X,
		Sizes: [
			"95%",
			"5%"
		],
		Rules: [
			SeperateHall,
			PlaceArches
		]
	}
},
PlaceArches: {
	CoordinateSystem: xy-z,
	Repeat: {
		Axis: Z,
		Offset: VaultSize/2,
		Size: VaultSize,
		Rule: ArchMesh,
		RemainderRule: HalfArchMesh
	}
},
SeperateHall: {
	Divide: {
		Axis: X,
		Sizes: [
			"33%",
			"34%",
			"33%"
		],
		Rules: [
			PlaceHalfVaults,
			PlacePillars,
			PlaceHalfPillars
		]
	}
},
PlaceHalfPillars: {
	Repeat: {
		Axis: Z,
		Size: VaultSize,
		Repeats: -1,
		Rule: HalfPillar,
		RemainderRule: empty
	}
},
HalfPillar: {
	CoordinateSystem: xy-z,
	Divide: {
		Axis: Y,
		Sizes: [
			"10%",
			"60%",
			"30%"
		],
		Rules: [
			HalfPillarLedge,
			HalfPillarMesh,
			HalfVaultMesh
		]
	}
},
PlaceHalfVaults: {
	Repeat: {
		Axis: Z,
		Size: VaultSize,
		Repeats: -1,
		Rule: HalfVault,
		RemainderRule: empty
	}
},
HalfVault: {
	Divide: {
		Axis: Y,
		Sizes: [
			"70%",
			"30%"
		],
		Rules: [
			empty,
			HalfVaultMesh
		]
	}
},
PlacePillars: {
	Repeat: {
		Axis: Z,
		Size: VaultSize,
		Repeats: -1,
		Rule: Pillar,
		RemainderRule: empty
	}
},
Pillar: {
	Divide: {
		Axis: Y,
		Sizes: [
			"70%",
			"30%"
		],
		Rules: [
			PillarMesh,
			VaultMesh
		]
	}
},
PillarMesh: {
	X: PillarSize,
	Z: PillarSize,
	Mesh: {
		Name: data/models/romanesque_pillar_01.obj,
		Texture: data/textures/stone/stone12,
		TriplanarSample: true,
		TriplanarScale: 8
	}
},
HalfPillarMesh: {
	Snap: {
		X: 1,
		Y: 0,
		Z: 0
	},
	X: PillarSize/2,
	Z: PillarSize,
	Mesh: {
		Name: data/models/romanesque_pillar_02.obj,
		Texture: data/textures/stone/stone12,
		TriplanarSample: true,
		TriplanarScale: 8
	}
},
